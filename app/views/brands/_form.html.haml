%section.brands.form  
  = form_for @brand do |f|
    -if @brand.errors.any?
      #error_explanation
        %h2= "#{pluralize(@partner.errors.count, "error")} prohibited this brand from being saved:"
        %ul
          - @brand.errors.full_messages.each do |msg|
            %li= msg
    %table
      %tr 
        %td= f.label :title, 'Name'
        %td= f.text_field :title
      %tr
        %td= f.label :image, 'Bild'
        %td= f.file_field :image

    .actions
      = f.submit 'Speichern'