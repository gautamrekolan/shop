.form  
  = form_for @news_item do |f|
    -if @news_item.errors.any?
      #error_explanation
        %h2= "#{pluralize(@news_item.errors.count, "error")} prohibited this news_item from being saved:"
        %ul
          - @news_item.errors.full_messages.each do |msg|
            %li= msg
            
    %table
      %tr
        %td= f.label :title, t(:title)
        %td= f.text_field :title, :size => 80
      %tr
        %td= f.label :content, t(:content)
        %td= f.text_area :content, :rows => 6, :cols => 60 
      %tr
        %td= f.label :slideshow, t(:slideshow?)
        %td= f.check_box :slideshow
      %tr
        %td= f.label :little_news, t(:little_news?)
        %td= f.check_box :little_news
      %tr
        %td= f.label :image, t(:image)
        %td= f.file_field :image
      
    .actions
      = f.submit t(:save)
