%section#orders.form
  = form_for @order do |f|
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg
    = f.hidden_field :status, :value => Order::STATUS_TYPES[0]
    %table
      %tr
        %td= f.label :name, 'Name'
        %td
          = f.text_field :first_name, :id => "first_name", :size => 20, :placeholder => 'Vorname', :required => true
          = f.text_field :last_name, :id => "last_name", :placeholder => 'Nachname', :required => true
      %tr
        %td= f.label :street, "Straße, Hausnummer"
        %td
          = f.text_field :street, :id => "street", :placeholder => "Straße, Hausnummer", :required => true
      %tr
        %td= f.label :city, "PLZ, Stadt"
        %td
          = f.text_field :zip, :id => "zip", :size => 5, :placeholder => "PLZ", :required => true
          = f.text_field :city, :id => "city", :placeholder => "Stadt", :required => true
      %tr
        %td= f.label :country, "Land "
        %td= f.text_field :country, :id => "country", :placeholder => "Land", :required => true
      %tr
        %td= f.label :email, "Email "
        %td= f.text_field :email, :id => "email", :placeholder => "Max@Mustermann.de", :required => true
      %tr
        %td= f.label :pay_type, "Bezahlung per "
        %td= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => "Wähle gewünschte Bezahlmethode", :id => "pay_type", :required => true
      %tr
        %td= f.label :accept_conditions, "AGB"
        %td= f.check_box :accept_conditions, :id => "accept_conditions", :required => true
    .actions
      = f.submit 'Bestellung absenden', :id => "send_order"
