%section#order.index
  %h1.page_title= @title
  = render 'item_list', :item_source => @order
  %h1.page_title Kundendaten
  
  %table 
    %tr
      %td Name:
      %td= @order.first_name + ' ' + @order.last_name
    %tr
      %td Adresse:
      %td 
        = @order.street
        %br
        = @order.zip.to_s + ' ' + @order.city
        %br
        = @order.country
      %tr
        %td Email:
        %td= @order.email
      %tr
        %td Bezahlung per:
        %td= @order.pay_type
  .actions
    = form_for @order do |f|
      = f.submit 'Status aktualisieren:'
      = f.select :status, Order::STATUS_TYPES
     
