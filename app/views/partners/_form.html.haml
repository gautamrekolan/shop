%section.partners.form  
  = form_for @partner do |f|
    -if @partner.errors.any?
      #error_explanation
        %h2= "#{pluralize(@partner.errors.count, "error")} prohibited this partner from being saved:"
        %ul
          - @partner.errors.full_messages.each do |msg|
            %li= msg
    %table
      %tr 
        %td= f.label :title, t(:name)
        %td= f.text_field :title
      %tr
        %td= f.label :image, t(:image)
        %td= f.file_field :image
      %tr
        %td= f.label :link, t(:link)
        %td= f.text_field :link

    .actions
      = f.submit t(:save)
