= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :category
    %br
    =f.select(:category, Category.all.collect {|c| [c.title]})
  .field
    = f.label :price
    %br
    = f.text_field :price
  .field
    = f.label :image
    %br
    = f.file_field :image
  .actions
    = f.submit 'Save'
