%section#product
  #product_show
    .inner
      - if title_image = @product.product_images.where(:title_image => true).take(1)
        .full_image
          - title_image.each do |title_image|
            = link_to (image_tag title_image.image(:product)), title_image
      - if @product.product_images.where(:title_image => false)
        .thumbs
          .thumbs_inner
            .image
              - @product.product_images.where(:title_image => false).take(4).each do |product_image|
                = image_tag product_image.image(:thumb) 
    #product_show_description
      - if can? :update, @product
        .edit= link_to '=', edit_product_path(@product)
      - if can? :destroy, @product
        .destroy= link_to 'X', @product, :confirm => 'Are you sure?', :method => :delete
      %h1= @product.title
      %p= @product.description
      %ul
        - @product.options.each do |option|
          %li
            = option.name
            = select_tag option.name, options_from_collection_for_select(option.values, "_id", "content")

      .add_to_cart= button_to 'kaufen', line_items_path(:product_id => @product), :remote => true
      .price= number_to_currency(@product.price)