%h1 
  Listing users
  .add= link_to 'New User', new_user_path

%table
  %tr
    %th Name
    %th Admin
    %th Password
    %th Password digest
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.admin
      %td= user.password
      %td= user.password_digest
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete


